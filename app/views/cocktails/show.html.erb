<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <h1>Your Cocktail choice</h1>
      <h2><%= @cocktail.name %></h2>
      <%= image_tag @cocktail.photo, height: 300, crop: :fill, class: "rounded-lg m-3"%>

      <div class="row">
        <div class="col-sm-12 col-md-6">
          <h4>Recipe</h4>
          <table class="table table-bordered">
            <tbody>
              <thead>
                <th>Ingredient</th>
                <th>Description</th>
                <th>Action</th>
              </thead>
              <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.description %></td>
                <td><p><%= dose.ingredient.name %></p></td>
                <td><%= link_to "Destroy Dose", dose_path(dose), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-danger" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
      <div class="col-sm-12 col-md-6">
      <%= link_to cocktails_path do  %>
      <i class="fas fa-long-arrow-alt-left" style="font-size: 40px;"></i>
      <% end %>
      <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      <%= link_to "Destroy Cocktail", cocktail_path(@cocktail), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-danger" %>
    </div>
  </div>
